{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "js",
		"types": [ "node" ],
		"allowJs": true
	},
	"exclude": [
		"examples"
	]
}